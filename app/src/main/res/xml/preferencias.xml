<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
    android:title="Dificultad modo Invitado">

        <ListPreference
        android:title="@string/elecciondificultad"
        android:key="dif"
        android:entries="@array/tipodificultad"
        android:entryValues="@array/valorestipodificultad"
        android:defaultValue="facil">
        </ListPreference>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Dificultad modo Batalla">

        <ListPreference
            android:title="Elige el número de colores"
            android:key="difB"
            android:entries="@array/numerocolores"
            android:entryValues="@array/valoresnumerocolores"
            android:defaultValue="6">
        </ListPreference>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Vibracion">

        <CheckBoxPreference
            android:key="vib"
            android:title="Vibración activada"
            android:defaultValue="true">

        </CheckBoxPreference>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Sonido">

        <CheckBoxPreference
            android:key="son"
            android:title="Efectos de sonido y música"
            android:defaultValue="true">

        </CheckBoxPreference>

    </PreferenceCategory>


</PreferenceScreen>
